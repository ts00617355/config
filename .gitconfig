[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[user]
	name = sandytseng
	email = sandytseng@kkbox.com
[color]
    ui = auto

[alias]
    ci = commit
    st = status
    br = branch
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lo = log --oneline

[core]
	editor = vi
[merge]
	tool = opendiff
